#!/bin/sh

# pkg-status content is generated by the sys_check_upgrades script, which
# is run by a crontab every 15 minutes

. $HOME/.local/etc/pkg-status

pkg() {
	if [ "$upgradeable" = "0" ]; then
		echo " $upgradeable / $installed pkg"
	else
		echo " ^c#ff0000^$upgradeable^d^ / $installed pkg"
	fi
	. "$HOME/.local/etc/pkg-status"
}

echo $(pkg)
